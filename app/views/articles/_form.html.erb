<% if @article.errors.any? %>
  <h2> Errors for creation:</h2>
  <% @article.errors.full_messages.each do |message| %>
    <ul>
      <li>
        <%= message %>
      </li>
    </ul>
  <% end %>
<% end %>
<%= form_for  @article do |f| %>
  <p>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :desc %>
    <br>
    <%= f.text_area :desc %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to "Back", articles_path %>